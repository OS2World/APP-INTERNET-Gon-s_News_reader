GNSPOOLOBJS=	gnspool.o \
		init.o \
		newsrc.o \
		nntp.o \
		smtp.o \
		auth.o \
		client.o \
		inetbios.o \
		gncom.o \
		key.o \
		kanji.o \
		$(OPTGNSPOOLOBJS) \
		$(FRC)

gnspool.exe:	$(GNSPOOLOBJS)
	$(CC) -o gnspool @<<
$(LFLAGS) $(GNSPOOLOBJS) $(LIBS)
<<
	aout2exe gnspool

gnspool.o: \
	gnspool.c \
	nntp.h \
	gn.h \
	$(FRC)

#-------------------------------------------------------------
configur:	configur.o
	$(CC) -o configur configur.o
	aout2exe configur
#-------------------------------------------------------------
install:	all \
	$(BINDIR)\gn.exe \
	$(BINDIR)\gnspool.exe \
	$(MANDIR)\gn$(MANEXT) \
	$(MANDIR)\gnspool$(MANEXT) \
	$(FRC)

$(BINDIR)\gn.exe:	gn.exe
	copy $? $@

$(BINDIR)\gnspool.exe:	gnspool.exe
	copy $? $@

$(MANDIR)\gn$(MANEXT):	gn.man
	copy $? $@

$(MANDIR)\gnspool$(MANEXT):	gnspool.man
	copy $? $@

clean:
	-del *.o
	-del gn
	-del gnspool
	-del configur

clobber:	clean
	-del gn.exe
	-del gn.man
	-del gnspool.exe
	-del gnspool.man
	-del config.h
	-del configur.exe
