MAIL_KANJI_CODE		= JIS
PROCESS_KANJI_CODE	= SJIS
FILE_KANJI_CODE		= SJIS
DISPLAY_KANJI_CODE	= SJIS
LINES		= 24
COLUMNS		= 80

BINDIR		= c:\bin
MANDIR		= c:\man
MANEXT		= .1

NEWSSPOOL	= /usr/spool/news
NEWSLIB		= /usr/lib/news

NEWSRC		= newsrc
SIGNATURE	= signatur
AUTHORCOPY	= author_c
SAVEDIR		= /news
TMPDIR		= /
PAGER		= more <
RETURN_AFTER_PAGER = 1
EDITOR		= edlin

CC		= gcc
OPTCFLAGS	= 
OPTGNOBJS	= 
OPTGNSPOOLOBJS	= 
OPTLFLAGS	=
OPTLIBS		= 

OSDEFINES	= -DMSDOS
NETWORKDEFINES	= -DINETBIOS
COMPILERDEFINES	= -DGNUDOS
DEFINES		= $(OSDEFINES) $(NETDEFINES) $(COMPILORDEFINES)
HEADER_DEFINES	= -DHAS_STRING_H -DHAS_STDLIB_H -DHAS_IO_H -DHAS_SYS_TYPES_H -DHAS_DIR_H
CFLAGS		= $(DEFINES) $(HEADER_DEFINES) $(OPTCFLAGS) -w -O
LFLAGS		= $(OPTLFLAGS)
LIBS		= $(OPTLIBS)
######################################################################

.c.o:
	$(CC) -c $(CFLAGS) $<

all:	gn.exe \
	gnspool.exe \
	$(FRC)

GNOBJS=	gn.o \
	init.o \
	newsrc.o \
	group.o \
	subject.o \
	article.o \
	follow.o \
