	$(CC) $(LFLAGS) -o $@ gninews.o

gninews.o: \
	gninews.c \
	nntp.h \
	gn.h \
	config.h \
	$(FRC)
#-------------------------------------------------------------
gnmail:	gnmail.o 
	$(CC) $(LFLAGS) -o $@ gnmail.o

gnmail.o: \
	gnmail.c \
	nntp.h \
	gn.h \
	config.h \
	$(FRC)
#-------------------------------------------------------------
configur:	configur.o
	$(CC) $(LFLAGS) -o $@ $? $(LIBS)
#-------------------------------------------------------------
install:	all \
	$(BINDIR)/gn \
	$(BINDIR)/gnspool \
	$(BINDIR)/gnloops \
	$(BINDIR)/gninews \
	$(BINDIR)/gnmail \
	$(MANDIR)/gn$(MANEXT) \
	$(MANDIR)/gnspool$(MANEXT) \
	$(MANDIR)/gnloops$(MANEXT) \
	$(FRC)

$(BINDIR)/gn:	gn
	cp $? $@
	chmod 755 $@

$(BINDIR)/gnspool:	gnspool
	cp $? $@
	chmod 755 $@

$(BINDIR)/gnloops:	gnloops
	cp $? $@
	chmod 755 $@

$(BINDIR)/gninews:	gninews
	cp $? $@
	chmod 755 $@

$(BINDIR)/gnmail:	gnmail
	cp $? $@
	chmod 755 $@

$(MANDIR)/gn$(MANEXT):	gn.man
	cat $? | gzip > $@
	chmod 644 $@

$(MANDIR)/gnspool$(MANEXT):	gnspool.man
	cat $? | gzip > $@
	chmod 644 $@

$(MANDIR)/gnloops$(MANEXT):	gnloops.man
	cat $? | gzip > $@
	chmod 644 $@

clean:
	-rm -f *.o core

clobber:	clean
	-rm -f gn gn.man gnspool gnspool.man gnloops gnloops.man gninews gnmail config.h configur

lint:
	lint $(CFLAGS) *.c
