#-------------------------------------------------------------
GNSPOOLOBJS=	gnspool.o \
		init.o \
		newsrc.o \
		nntp.o \
		smtp.o \
		getopt.o \
		gncom.o \
		key.o \
		kanji.o \
		$(OPTGNSPOOLOBJS) \
		$(FRC)

gnspool.x: $(GNSPOOLOBJS)
	$(CC) -O -ognspool.x $(GNSPOOLOBJS) $(LFLAGS) $(LIBS)

gnspool.o: \
	gnspool.c \
	nntp.h \
	gn.h \
	$(FRC)

#-------------------------------------------------------------
configur:	configur.x
configur.x:	configur.o
	$(CC) -oconfigur.x configur.o  $(LIBS)

configur.o:	configur.c
#-------------------------------------------------------------
install:	all \
	$(BINDIR)\gn.x \
	$(BINDIR)\gnspool.x \
	$(MANDIR)\gn$(MANEXT) \
	$(MANDIR)\gnspool$(MANEXT) \
	$(FRC)

$(BINDIR)\gn.x:	gn.x
	copy $? $@

$(BINDIR)\gnspool.x:	gnspool.x
	copy $? $@

$(MANDIR)\gn$(MANEXT):	gn.man
	copy $? $@

$(MANDIR)\gnspool$(MANEXT):	gnspool.man
	copy $? $@

clean:
	del /y *.o

clobber:	clean
	del /y gn.x
	del /y gn.man
	del /y gnspool.x
	del /y gnspool.man
	del /y config.h
	del /y configur.x
