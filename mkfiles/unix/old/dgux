#-------------------------------------------------------------
GNSPOOLOBJS=	gnspool.o \
		init.o \
		newsrc.o \
		nntp.o \
		smtp.o \
		client.o \
		gncom.o \
		key.o \
		kanji.o \
		$(OPTGNSPOOLOBJS) \
		$(FRC)

gnspool:	$(GNSPOOLOBJS)
	$(CC) $(LFLAGS) -o $@ $(GNSPOOLOBJS) $(LIBS)

gnspool.o: \
	gnspool.c \
	nntp.h \
	gn.h \
	$(FRC)

#-------------------------------------------------------------
gninews:	gninews.o 
	$(CC) $(LFLAGS) -o $@ gninews.o

gninews.o: \
	gninews.c \
	nntp.h \
	gn.h \
	config.h \
	$(FRC)
#-------------------------------------------------------------
configur:	configur.o
	$(CC) $(LFLAGS) -o $@ $? $(LIBS)
#-------------------------------------------------------------
install:	all \
	$(BINDIR)/gn \
	$(BINDIR)/gnspool \
	$(BINDIR)/gninews \
	$(MANDIR)/gn$(MANEXT) \
	$(MANDIR)/gnspool$(MANEXT) \
	$(FRC)

$(BINDIR)/gn:	gn
	cp $? $@
	chmod 755 $@

$(BINDIR)/gnspool:	gnspool
	cp $? $@
	chmod 755 $@

$(BINDIR)/gninews:	gninews
	cp $? $@
	chmod 755 $@

$(MANDIR)/gn$(MANEXT):	gn.man
	cp $? $@
	chmod 644 $@

$(MANDIR)/gnspool$(MANEXT):	gnspool.man
	cp $? $@
	chmod 644 $@

clean:
	-rm -f *.o core

clobber:	clean
	-rm -f gn gn.man gnspool gnspool.man gninews config.h configur

lint:
	lint $(CFLAGS) *.c
