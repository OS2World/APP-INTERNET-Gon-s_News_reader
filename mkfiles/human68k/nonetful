MAIL_KANJI_CODE		= JIS
PROCESS_KANJI_CODE	= SJIS
FILE_KANJI_CODE		= SJIS
DISPLAY_KANJI_CODE	= SJIS
LINES		= 31
COLUMNS		= 96

BINDIR		= d:\tool
MANDIR		= d:\tool\doc
MANEXT		= .1

NEWSSPOOL	= /usr/spool/news
NEWSLIB		= /usr/lib/news

NEWSRC		= newsrc
SIGNATURE	= signature
AUTHORCOPY	= author_copy
SAVEDIR		= d:/gn
TMPDIR		= g:/
PAGER		= more <
RETURN_AFTER_PAGER = 1
EDITOR		= ed

CC		= gcc
OPTCFLAGS	= -DMIME -DUSE_JNAMES
OPTGNOBJS	= jnames.o
OPTGNSPOOLOBJS	= 
OPTLFLAGS	= 
OPTLIBS		= libmimekit.a

OSDEFINES	= -DMSDOS
NETWORKDEFINES	= -DNO_NET
COMPILERDEFINES	= 
DEFINES		= $(OSDEFINES) $(NETWORKDEFINES) $(COMPILERDEFINES)
HEADER_DEFINES	= -DHAS_STRING_H -DHAS_STDLIB_H -DHAS_IO_H -DHAS_SYS_TYPES_H -DHAS_CONIO_H
CFLAGS		= $(DEFINES) $(HEADER_DEFINES) $(OPTCFLAGS) -funsigned-char -O
LFLAGS		= $(OPTLFLAGS)
LIBS		= $(OPTLIBS) -lsignal
######################################################################
%.o: %.c
	$(CC) -c $(CFLAGS) $<

all: gn.x gnspool.x

GNOBJS=	gn.o \
	init.o \
	newsrc.o \
	group.o \
	subject.o \
	article.o \
	follow.o \
	reply.o \
	cancel.o \
	post.o \
	referenc.o \
	save.o \
	shell.o \
	nntp.o \
	smtp.o \
	getopt.o \
	gncom.o \
	key.o \
	kanji.o \
	$(OPTGNOBJS) \
	$(FRC)


gn.x: $(GNOBJS)
	$(CC) -O -ogn.x $(GNOBJS) $(LFLAGS) $(LIBS)

gn.o: \
	gn.c \
	nntp.h \
	gn.h \
	$(FRC)

