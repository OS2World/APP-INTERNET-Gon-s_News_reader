MAIL_KANJI_CODE		= JIS
PROCESS_KANJI_CODE	= SJIS
FILE_KANJI_CODE		= SJIS
DISPLAY_KANJI_CODE	= SJIS
LINES		= 24
COLUMNS		= 80

BINDIR		= c:\bin
MANDIR		= c:\man
MANEXT		= .1

NEWSSPOOL	= /usr/spool/news
NEWSLIB		= /usr/lib/news

NEWSRC		= newsrc
SIGNATURE	= signatur
AUTHORCOPY	= author_c
SAVEDIR		= /news
TMPDIR		= /
PAGER		= more <
RETURN_AFTER_PAGER = 1
EDITOR		= edlin

CC		= cl
OPTCFLAGS	= /DUSE_FGETS
OPTGNOBJS	= 
OPTGNSPOOLOBJS	= 
OPTLFLAGS	= 
OPTLIBS		= 

OSDEFINES	= /DMSDOS
NETWORKDEFINES	= /DNO_NET
COMPILERDEFINES	= /DMSC9
DEFINES		= $(OSDEFINES) $(NETWORKDEFINES) $(COMPILERDEFINES)
HEADER_DEFINES	= /DHAS_STRING_H /DHAS_STDLIB_H /DHAS_IO_H -DSYS_TYPES_H /DHAS_CONIO_H /DHAS_DIRECT_H
CFLAGS		= $(DEFINES) $(HEADER_DEFINES) $(OPTCFLAGS) /nologo
LFLAGS		= $(OPTLFLAGS) /stack:10240
LIBS		= $(OPTLIBS)
######################################################################
all:	gn.exe \
	gnspool.exe \
	gninews.exe \
	gnmail.exe \
	$(FRC)

GNOBJS=	gn.obj \
	init.obj \
	newsrc.obj \
	group.obj \
