	nntp.o \
	smtp.o \
	client.o \
	gncom.o \
	key.o \
	kanji.o \
	$(OPTGNOBJS) \
	$(FRC)


all:	gn \
	gnspool \
	gninews \
	$(FRC)

gn:	$(OBJS)
	$(CC) $(LFLAGS) -o $@ $(OBJS) $(LIBS)

