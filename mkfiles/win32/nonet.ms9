GNSPOOLOBJS=	gnspool.obj \
		init.obj \
		newsrc.obj \
		getopt.obj \
		nntp.obj \
		smtp.obj \
		auth.obj \
		client.obj \
		gncom.obj \
		key.obj \
		kanji.obj \
		$(OPTGNSPOOLOBJS) \
		$(FRC)

gnspool.exe:	$(GNSPOOLOBJS)
	link @<<
$(GNSPOOLOBJS)
/out:gnspool.exe $(LFLAGS)

$(LIBS)

<<

gnspool.obj: \
	gnspool.c \
	nntp.h \
	gn.h \
	$(FRC)

#-------------------------------------------------------------
gninews.exe:	gninews.obj
	$(CC) gninews.obj
#-------------------------------------------------------------
gnmail.exe:	gnmail.obj
	$(CC) gnmail.obj
#-------------------------------------------------------------
configur:	configur.exe
configur.exe:	configur.obj
	$(CC) -o configur.exe configur.obj
#-------------------------------------------------------------
install:	all \
	$(BINDIR)\gn.exe \
	$(BINDIR)\gnspool.exe \
	$(BINDIR)\gninews.exe \
	$(BINDIR)\gnmail.exe \
	$(MANDIR)\gn$(MANEXT) \
	$(MANDIR)\gnspool$(MANEXT) \
	$(FRC)

$(BINDIR)\gn.exe:	gn.exe
	copy $? $@

$(BINDIR)\gnspool.exe:	gnspool.exe
	copy $? $@

$(BINDIR)\gninews.exe:	gninews.exe
	copy $? $@

$(BINDIR)\gnmail.exe:	gnmail.exe
	copy $? $@

$(MANDIR)\gn$(MANEXT):	gn.man
	copy $? $@

$(MANDIR)\gnspool$(MANEXT):	gnspool.man
	copy $? $@

clean:
	-del *.obj
	-del *.map

clobber:	clean
	-del gn.exe
	-del gn.man
	-del gnspool.exe
	-del gnspool.man
	-del gninews.exe
	-del gnmail.exe
	-del config.h
	-del configur.exe
