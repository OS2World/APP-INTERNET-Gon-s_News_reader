MAIL_KANJI_CODE		= JIS
PROCESS_KANJI_CODE	= EUC
FILE_KANJI_CODE		= EUC
DISPLAY_KANJI_CODE	= EUC
LINES		= 24
COLUMNS		= 80

BINDIR		= /usr/local/bin
MANDIR		= /usr/man/ja_JP.ujis/cat1
MANEXT		= .1.gz

NEWSSPOOL	= /usr/spool/news
NEWSLIB		= /usr/lib/news

NEWSRC		= .newsrc
SIGNATURE	= .signature
AUTHORCOPY	= author_copy
SAVEDIR		= ~/News
TMPDIR		= /tmp
PAGER		= less -c -m -e
RETURN_AFTER_PAGER = 0
EDITOR		= vi
MAILER		= /usr/sbin/sendmail -t

CC		= cc
OPTCFLAGS	= -O
OPTGNOBJS	= 
OPTGNSPOOLOBJS	= 
OPTLFLAGS	= 
OPTLIBS		= 

SHELL		= /bin/sh
DEFINES		= -DUNIX -DUSG -DSVR4
HEADER_DEFINES	=
CFLAGS		= $(DEFINES) $(HEADER_DEFINES) $(OPTCFLAGS)
LFLAGS		= $(OPTLFLAGS)
LIBS		= $(OPTLIBS)
######################################################################
all:	gn \
	gnspool \
	gnloops \
	gninews \
	gnmail \
	$(FRC)

#-------------------------------------------------------------
GNOBJS=	gn.o \
	init.o \
	newsrc.o \
	group.o \
	subject.o \
	article.o \
	follow.o \
	reply.o \
	cancel.o \
	post.o \
	referenc.o \
	save.o \
	shell.o \
	nntp.o \
	smtp.o \
	client.o \
	gncom.o \
	key.o \
	kanji.o \
	$(OPTGNOBJS) \
	$(FRC)


gn:	$(GNOBJS)
	$(CC) $(LFLAGS) -o $@ $(GNOBJS) $(LIBS)

gn.o: \
	gn.c \
	nntp.h \
	gn.h \
	$(FRC)

